<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editor</title>

  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white h-screen flex flex-col">
  <!-- Navbar -->
  <nav class="bg-gray-800 p-4 flex justify-between items-center shadow-lg">
    <div class="text-lg font-bold">YourAppName</div>
    <div class="space-x-4">
      <a href="/home" class="hover:underline">Home</a>
      <a href="/about" class="hover:underline">About</a>
      <a href="/pricing" class="hover:underline">Pricing</a>
      <a href="/subscription" class="hover:underline">Subscription</a>
      <a href="/logout" class="bg-red-600 px-4 py-2 rounded hover:bg-red-700">Logout</a>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="flex flex-1">
    <!-- Sidebar -->
    <aside class="bg-gray-800 w-1/5 p-4 space-y-4 overflow-auto shadow-lg">
      <h2 class="text-xl font-semibold">Files</h2>
      <ul id="file-list" class="space-y-2">
        <li class="p-2 bg-gray-700 rounded hover:bg-gray-600 flex items-center">
          <span class="material-icons text-gray-300 mr-2">description</span>
          File 1.txt
        </li>
        <li class="p-2 bg-gray-700 rounded hover:bg-gray-600 flex items-center">
          <span class="material-icons text-gray-300 mr-2">description</span>
          File 2.docx
        </li>
        <!-- Dynamically loaded files go here -->
      </ul>
    </aside>

    <!-- Editor Section -->
    <main class="flex-1 p-4 space-y-4">
      <!-- Room Info -->
      <div class="flex justify-between items-center bg-gray-800 p-4 rounded shadow">
        <div>Total Online Users: <span id="total-users">0</span></div>
        <div>Room (<span id="room-name">Default</span>): <span id="room-users">0</span></div>
        <div><span id="typing-indicator">No one is typing...</span></div>
      </div>

      <!-- Text Editor -->
      <textarea id="editor" class="w-full h-96 p-4 rounded bg-gray-700 text-white  shadow focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>

      <!-- Room Actions -->
      <div class="flex items-center gap-4 space-x-4">
        <button id="gen-room-id" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Generate Room ID</button>
        <p class="room-id-generated"></p>
        <input
          type="text"   
          id="room-id"
          placeholder="Enter Room ID"
          class="p-2 w-1/3 bg-gray-700 rounded text-white border border-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <button id="join-room" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded">Join Room</button>
      </div>
    </main>
  </div>
</body>
</html>
